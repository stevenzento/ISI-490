<?php
session_start();
include 'db_connect.php';

// Handle Login
$message = '';
if ($_SERVER["REQUEST_METHOD"] == "POST" && isset($_POST["login"])) {
    $username = trim($_POST["username"]);
    $password = $_POST["password"];

    $stmt = $conn->prepare("SELECT id, password FROM users WHERE username=?");
    $stmt->bind_param("s", $username);
    $stmt->execute();
    $stmt->store_result();
    $stmt->bind_result($id, $hashed_password);
    $stmt->fetch();

    if ($stmt->num_rows > 0 && password_verify($password, $hashed_password)) {
        $_SESSION["user_id"] = $id;
        $_SESSION["username"] = $username;
        $message = "âœ… Logged in successfully!";
    } else {
        $message = "âŒ Invalid username or password!";
    }
    $stmt->close();
}

// Handle Registration
if ($_SERVER["REQUEST_METHOD"] == "POST" && isset($_POST["register"])) {
    $username = trim($_POST["username"]);
    $email = trim($_POST["email"]);
    $password = password_hash($_POST["password"], PASSWORD_DEFAULT);

    $stmt = $conn->prepare("INSERT INTO users (username, email, password) VALUES (?, ?, ?)");
    $stmt->bind_param("sss", $username, $email, $password);
    if ($stmt->execute()) {
        $message = "âœ… Registered successfully! Please log in.";
    } else {
        $message = "âŒ Registration failed: " . $conn->error;
    }
    $stmt->close();
}

// Handle Incident Report Submission
if ($_SERVER["REQUEST_METHOD"] == "POST" && isset($_POST["report_incident"])) {
    if (!isset($_SESSION["user_id"])) {
        $message = "âŒ You must be logged in to report an incident.";
    } else {
        $user_id = $_SESSION["user_id"];
        $location = trim($_POST["location"]);
        $type = trim($_POST["type"]);
        $description = trim($_POST["description"]);
        
        // Image Upload Handling
        $image_path = null;
        if (!empty($_FILES["image"]["name"])) {
            $target_dir = "uploads/";
            $image_path = $target_dir . basename($_FILES["image"]["name"]);
            move_uploaded_file($_FILES["image"]["tmp_name"], $image_path);
        }

        // Insert Incident Report into Database
        $stmt = $conn->prepare("INSERT INTO incidents (user_id, location, type, description, image_path, status) VALUES (?, ?, ?, ?, ?, 'pending')");
        $stmt->bind_param("issss", $user_id, $location, $type, $description, $image_path);
        
        if ($stmt->execute()) {
            $message = "âœ… Incident reported successfully! Awaiting admin validation.";
        } else {
            $message = "âŒ Failed to report incident: " . $conn->error;
        }
        $stmt->close();
    }
}
?>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ðŸ”¥ CAWA - Login & Report</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 50px;
            background-color: #f4f4f4;
        }
        .container {
            max-width: 400px;
            margin: auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: white;
            box-shadow: 2px 2px 12px rgba(0, 0, 0, 0.1);
        }
        input, textarea, select {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }
        button {
            width: 100%;
            padding: 10px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        button:hover {
            background-color: #218838;
        }
        .message {
            margin: 10px 0;
            color: red;
        }
        .welcome {
            color: #28a745;
        }
    </style>
</head>
<body>
    <h1>ðŸ”¥ CAWA - Community Alert Web App</h1>

    <?php if (!empty($message)): ?>
        <p class="message"><?= $message ?></p>
    <?php endif; ?>

    <?php if (!isset($_SESSION["user_id"])): ?>
        <!-- Registration Form -->
        <div class="container">
            <h2>Register</h2>
            <form method="POST">
                <input type="text" name="username" placeholder="Username" required>
                <input type="email" name="email" placeholder="Email" required>
                <input type="password" name="password" placeholder="Password" required>
                <button type="submit" name="register">Register</button>
            </form>
        </div>

        <!-- Login Form -->
        <div class="container">
            <h2>Login</h2>
            <form method="POST">
                <input type="text" name="username" placeholder="Username" required>
                <input type="password" name="password" placeholder="Password" required>
                <button type="submit" name="login">Login</button>
            </form>
        </div>
    <?php else: ?>
        <!-- Logged In State -->
        <div class="container">
            <h2 class="welcome">Welcome, <?= $_SESSION["username"] ?>!</h2>
            <p>You are now logged in.</p>
            <a href="logout.php"><button>Logout</button></a>
        </div>

        <!-- Incident Reporting Form -->
        <div class="container">
            <h2>Report an Incident</h2>
            <form method="POST" enctype="multipart/form-data">
                <input type="text" name="location" placeholder="Location" required>
                <select name="type" required>
                    <option value="">Select Incident Type</option>
                    <option value="Fire">Fire</option>
                    <option value="Accident">Accident</option>
                    <option value="Theft">Theft</option>
                    <option value="Vandalism">Vandalism</option>
                    <option value="Other">Other</option>
                </select>
                <textarea name="description" placeholder="Incident Description" required></textarea>
                <input type="file" name="image" accept="image/*">
                <button type="submit" name="report_incident">Submit Report</button>
            </form>
        </div>
    <?php endif; ?>
</body>
</html>
